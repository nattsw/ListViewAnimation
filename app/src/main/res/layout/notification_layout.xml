<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/tools"
        android:id="@+id/notification_card"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/notification_height"
        android:layout_marginBottom="@dimen/notification_bottom_margin"
        android:layout_marginTop="@dimen/notification_top_margin"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/notification_card"
        card_view:cardCornerRadius="4dp"
        card_view:contentPadding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="@dimen/notification_icon"
                android:layout_height="@dimen/notification_icon"
                android:src="@drawable/ic_info_outline_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notification_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Header"/>

                <TextView
                    android:id="@+id/notification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>